# Development Environment Configuration (Local/Laptop)
# This configuration uses lightweight alternatives for development

# Server Configuration
PORT=3000
NODE_ENV=development

# Database - SQLite for development (file-based, no installation needed)
DATABASE_URL_DEV="file:./dev.db"
DATABASE_PROVIDER="sqlite"

# For production deployment, these will be used:
DATABASE_URL="postgresql://postgres:password@localhost:5432/videomixpro?schema=public"

# Redis Configuration - Using in-memory queue for development
USE_IN_MEMORY_QUEUE=true
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="dev-jwt-secret-key-for-local-development-only"
JWT_EXPIRES_IN="24h"

# AWS S3 Configuration (Optional for development)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET=""
USE_LOCAL_STORAGE=true

# FFmpeg Configuration
# Download from: https://www.gyan.dev/ffmpeg/builds/
# Extract to C:\ffmpeg and add to PATH, or specify full path below
FFMPEG_PATH="C:\\ffmpeg\\bin\\ffmpeg.exe"
FFPROBE_PATH="C:\\ffmpeg\\bin\\ffprobe.exe"
# Alternative: If added to PATH, just use:
# FFMPEG_PATH="ffmpeg"
# FFPROBE_PATH="ffprobe"

# File Upload Configuration
MAX_FILE_SIZE=500MB
ALLOWED_VIDEO_FORMATS="mp4,mov,avi,mkv"
UPLOAD_DIR="./uploads"
OUTPUT_DIR="./outputs"

# Application Configuration
FRONTEND_URL="http://localhost:3001"
API_VERSION="v1"

# License Verification (Disabled for development)
SKIP_LICENSE_CHECK=true
LICENSE_API_URL="https://api.videomixpro.com/license"
LICENSE_API_KEY=""

# Monitoring and Logging
LOG_LEVEL="debug"
LOG_TO_FILE=true
LOG_DIR="./logs"
SENTRY_DSN=""

# Development Specific
HOT_RELOAD=true
SKIP_AUTH=false
MOCK_VIDEO_PROCESSING=false